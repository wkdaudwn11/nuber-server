{
  "name": "nuber-server",
  "version": "1.0.0",
  "description": "API Server for the (N)Uber Clone Coding. GraphQL, Typescript, NodeJS",
  "main": "index.js",
  "repository": "git@github.com:wkdaudwn11/nuber-server.git",
  "author": "JangMyungJoo <wkdaudwn1028@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server:dev": "yarn types && cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/helmet": "^0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "cors": "^2.8.5",
    "graphql-tools": "^6.0.18",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.12.1",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0"
  }
}
